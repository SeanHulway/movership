%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Hul-A-Way Moving Your Metro Detroit Movers
    = stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true
    = javascript_include_tag "application", "data-turbolinks-track" => true
    = csrf_meta_tags
    %script{src: "https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.10/jquery.mask.js"}
  %body
    - if current_user.try(:admin?)
      = render 'layouts/admin_nav'
    .ui.container
      - flash.each do |name, msg|
        .ui.hidden.divider
        = content_tag :div, msg, class: 'ui message'
      .ui.basic.segment
        = yield
    = render 'layouts/funnel_footer'